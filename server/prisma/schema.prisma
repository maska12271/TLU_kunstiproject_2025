datasource db {
  provider = "sqlite"
  url      = "file:../db/db.sqlite"
}

generator kysely {
  provider = "prisma-kysely"

  output   = "../db/"
  fileName = "schema.d.ts"
}

model User {
  id       String @id
  username String
  name     String
  password String

  /// @kyselyType("Member" | "Admin" | "SuperAdmin")
  role String

  posts    Post[]
  sessions Session[]
  Project  Project[]
}

model Post {
  id          String  @id
  description String
  title       String
  imageUrl    String
  User        User?   @relation(fields: [userId], references: [id])
  userId      String?
}

model Project {
  id     String @id
  name   String
  admins User[]
}

model Session {
  id           String @id
  token        String
  refreshToken String
  expires_at   Int
  user_id      String
  user         User   @relation(fields: [user_id], references: [id])
}
